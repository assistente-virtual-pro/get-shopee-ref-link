{
  "manifest_version": 3,
  "name": "Shopee Affiliate Link Generator",
  "version": "1.0.0",
  "description": "Gere links de afiliados para produtos da Shopee com um clique",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://shopee.com.br/*",
    "https://shopee.com/*",
    "https://affiliate.shopee.com.br/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shopee Affiliate Link Generator",
    "default_icons": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://shopee.com.br/*",
        "https://shopee.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
